
@{
    ViewBag.Title = "新增商品信息";
    Layout = "~/Views/Shared/_Bootstrap.cshtml";
}

@model Gift.Qq_TbGood
<div class="panel panel-info">
    <div class="panel-heading">商品信息</div>
    <div class="panel-body">
        <form class="form-horizontal" action="/TbGoodsManage/Edit" method="post">
            @Html.HiddenFor(p => p.Id);
            <div class="form-group">
                <label for="Name" class="col-sm-2 control-label">商品名称</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Name, new { @class = "form-control", @readonly = "disabled" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">商品Title</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">推荐语</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(p => p.HeadContent, new { @class = "form-control", rows = "5" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">商品主图</label>
                <div class="col-sm-10">
                    <div style="height:200px">
                        <div class="thumbnail">
                            <img src="@Model.ShowImageUrl">
                        </div>
                    </div>
                    <input type="file" name="ShowImageUrl" id="ShowImageUrl" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label class="radio-inline">
                            @Html.RadioButtonFor(p => p.DeleteFlag, "0")是
                        </label>
                        <label class="radio-inline">
                            @Html.RadioButtonFor(p => p.DeleteFlag, "1")否
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">确认保存</button>
                </div>
            </div>
        </form>
    </div>
</div>


